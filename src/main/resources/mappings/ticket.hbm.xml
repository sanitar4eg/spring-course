<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans.models">

	<class name="Ticket" table="TICKET">
		<id column="ID" name="id">
			<generator class="identity"/>
		</id>
		<many-to-one class="beans.models.Event" column="EVENT" fetch="join" lazy="false" name="event"/>
		<property column="DATE_TIME" name="dateTime" type="java.time.LocalDateTime"/>
		<property column="SEATS" name="seats" type="string"/>
		<many-to-one class="beans.models.User" column="USER" fetch="join" lazy="false" name="user"/>
		<property column="PRICE" name="price" type="double"/>
	</class>

</hibernate-mapping>